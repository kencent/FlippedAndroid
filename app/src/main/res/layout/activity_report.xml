<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <EditText
        android:id="@+id/activity_report_content_et"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/flipped_layout_content_border"
        android:gravity="start"
        android:hint="这里写下反馈"
        android:textColor="@color/text_color_h2"
        android:textCursorDrawable="@null"
        android:maxLength="180"
        android:maxLines="8"
        android:padding="5dp" />

    <Button
        android:id="@+id/activity_report_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/flipped_button_background"
        android:text="反馈" />
</LinearLayout>