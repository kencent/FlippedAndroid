<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/flipped_item_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="@dimen/text_size_xl"
        android:textColor="@color/text_color_h2"
        tools:text="我发表了一条心情,我发我发表了一条心情我发表了一条心情我发表了一条心情我发表了一条心情我发表了一条心情表了一条心情我发表了一条心情我发表了一条心情"
    />

    <RelativeLayout
        android:id="@+id/flipped_item_rl_sender_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/flipped_item_tv_text"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/flipped_item_tv_send_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/textColorTertiary"
            android:textSize="@dimen/text_size_l"
            tools:text="发送给186******72"
        />
        <ImageView
            android:id="@+id/flipped_item_iv_divider"
            android:layout_width="1dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/flipped_item_tv_send_to"
            android:background="@color/textColorTertiary"
        />

        <TextView
            android:id="@+id/flipped_item_tv_send_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/flipped_item_iv_divider"
            android:textColor="@color/textColorTertiary"
            android:textSize="@dimen/text_size_l"
            tools:text="距离：2.3km"
        />

        <ImageView
            android:id="@+id/flipped_item_iv_tag_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/flipped_ic_tag_tu"
        />
        <ImageView
            android:id="@+id/flipped_item_iv_tag_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/flipped_item_iv_tag_pic"
            android:src="@drawable/flipped_ic_tag_voice"
        />
        <ImageView
            android:id="@+id/flipped_item_iv_tag_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toLeftOf="@id/flipped_item_iv_tag_voice"
            android:src="@drawable/flipped_ic_tag_video"
        />

    </RelativeLayout>


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/flipped_item_rl_sender_info"
        android:layout_marginTop="12dp"
        android:background="@color/textColorTertiary"
    />

</RelativeLayout>
