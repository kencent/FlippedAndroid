<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context=".view.PostActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:gravity="center"
        android:text="对Ta说出心动的话"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/text_size_xxl" />

    <AutoCompleteTextView
        android:id="@+id/flipped_post_activity_et_phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/flipped_layout_content_border"
        android:hint="@string/prompt_post_activity_phone"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@color/text_color_h2"
        android:textColorHint="@color/textColorTertiary"
        android:textCursorDrawable="@null"
        android:completionThreshold="1"
        android:textSize="@dimen/text_size_l" />

    <EditText
        android:id="@+id/flipped_post_activity_et_words"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/flipped_layout_content_border"
        android:gravity="bottom"
        android:hint="@string/prompt_post_activity_words"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:padding="5dp"
        android:textColor="@color/text_color_h2"
        android:textColorHint="@color/textColorTertiary"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/text_size_l" />

    <RelativeLayout
        android:id="@+id/activity_post_add_image_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/flipped_layout_content_border"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <ImageView
            android:id="@+id/activity_post_add_image_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/flipped_ic_add" />

        <TextView
            android:id="@+id/activity_post_add_image_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_post_add_image_iv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="添加图片"
            android:textSize="@dimen/text_size_l" />

        <ImageView
            android:id="@+id/activity_post_add_image_iv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_post_add_video_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/flipped_layout_content_border"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/activity_post_add_video_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/flipped_ic_add" />

        <TextView
            android:id="@+id/activity_post_add_video_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_post_add_video_iv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="添加视频" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activity_post_add_audio_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@drawable/flipped_layout_content_border"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin"
        android:visibility="gone">

        <ImageView
            android:id="@+id/activity_post_add_audio_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:src="@drawable/flipped_ic_add" />

        <TextView
            android:id="@+id/activity_post_add_audio_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/activity_post_add_audio_iv"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="添加语音" />

    </RelativeLayout>


</LinearLayout>