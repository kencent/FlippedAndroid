<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/color_white"
                android:orientation="vertical">

    <ViewFlipper
        android:id="@+id/call_fragment_vf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pre_call"
        />
        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:lottie_autoPlay="true"
            app:lottie_fileName="like.json"
            app:lottie_loop="true"/>
    </ViewFlipper>


    <TextView
        android:id="@+id/call_fragment_tv_call"
        android:layout_width="160dp"
        android:layout_height="44dp"
        android:layout_below="@+id/call_fragment_vf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@drawable/flipped_button_background"
        android:gravity="center"
        android:text="召唤Ta"
        android:textColor="@color/color_white"
    />
    <TextView
        android:id="@+id/call_fragment_tv_call_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_fragment_tv_call"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="点击后，可以开始召唤心动的Ta"
    />
</RelativeLayout>